# Production Environment Configuration for Daan Darpan
# Copy this to .env and modify as needed

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://daan_darpan_user:CHANGE_THIS_PASSWORD@localhost:5432/daan_darpan

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8484
HOST=0.0.0.0
NODE_ENV=production

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate a strong session secret (32+ characters)
# You can use: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_32_CHARS_MINIMUM

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# For database backup distribution
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_TO_FILE=true

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Automatic database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# For specific server IP binding
# HOST=192.168.1.100

# For localhost only access
# HOST=127.0.0.1

# For all network interfaces (default)
# HOST=0.0.0.0