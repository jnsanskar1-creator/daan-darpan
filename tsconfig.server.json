{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./server",
        "noEmit": false,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}